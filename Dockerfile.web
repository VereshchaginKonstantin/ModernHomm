FROM python:3.8-slim

# Установка зависимостей системы
RUN apt-get update && apt-get install -y \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Создание рабочей директории
WORKDIR /app

# Копирование requirements.txt и установка Python зависимостей
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Копирование приложения
COPY web_interface.py .
COPY web_images_manager.py .
COPY web_arena.py .
COPY web_templates.py .
COPY game_engine.py .
COPY config.json .
COPY WEB_VERSION .
COPY VERSION .

# Копирование Python модуля db (модели и репозиторий)
COPY db/ ./db/

# Создание директории для статических файлов (картинки юнитов)
RUN mkdir -p static/unit_images

# Копирование статических файлов арены
COPY static/arena/ ./static/arena/

# Создание непривилегированного пользователя
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Expose порт 5000 (Flask будет слушать на 5000)
EXPOSE 5000

# Запуск приложения
CMD ["python", "web_interface.py"]
